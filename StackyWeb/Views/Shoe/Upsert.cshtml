@model Shoe

<h1>@(Model.Id != Guid.Empty?"Update":"Create")</h1>

<form method="post" enctype="multipart/form-data">
    <input hidden asp-for="Id"/>
    <input hidden asp-for="UrlImg"/>
    <div class="row">
        <div class="col-5">
            <div class="">
                <label class="label-form">Model Name</label><br>
                <input type="text" class="form-control" asp-for=ModelName required><br><br>
            </div>
            <div class="">
                <label class="label-form">Size</label><br>
                <input type="text" class="form-control" asp-for=Size required><br><br>
            </div>
            <div class="">
                <label class="label-form">Quantity</label><br>
                <input type="text" class="form-control" asp-for=QuantityAvailable required><br><br>
            </div>
        </div>
        <div class="col-4">
            <div class="">
                <label class="label-form">Color</label><br>
                <input type="text" class="form-control" asp-for=Color required><br><br>
            </div>
            <div class="">
                <label class="label-form">Price</label><br>
                <input type="text" class="form-control" asp-for=Price required><br><br>
            </div>
            <div class="mt-4">
                <input id="input-file" type="file" name="file" class="form-control" asp-for=UrlImg><br><br>
            </div>
        </div>
        <div class="col-3">
            <img id="file-preview" src="@Model.UrlImg" class="img-thumbnail"></img>
        </div>
    </div>

    <div class="mt-3">
        <label class="label-form">Description</label><br>
        <textarea class="form-control" asp-for=Description rows="4" cols="50"></textarea><br><br>
    </div>
    
    <div class="col-6">
        @if(Model.Id != Guid.Empty)
        {
            <button class="btn btn-primary" type="submit">Update</button>
        }
        else
        {
            <button class="btn btn-primary" type="submit">Create</button>
        }
    </div>
</form>

<script>

    const input = document.getElementById("input-file");

    const previewPhoto = () => {
        const file = input.files;
        if (file) {
            const fileReader = new FileReader();
            const preview = document.getElementById('file-preview');
            fileReader.onload = function (event) {
                preview.src = event.target.result;
            }
            fileReader.readAsDataURL(file[0]);
        }
    }
   
    input.addEventListener("change", previewPhoto);
        
</script>
